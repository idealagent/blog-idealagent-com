---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize } from "@/lib/utils/textConverter";

import { IconTags, IconTag } from "@iconify-prerendered/vue-lucide";

const tags = await getTaxonomy("posts", "tags");
---

<Base title={"Tags"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 page-heading">Tags</h1>
      <ul class="space-x-4">
        {
          tags.map((tag) => (
            <li class="inline-block my-1">
              <a
                href={`/tags/${tag}`}
                class="rounded-lg bg-light px-4 py-2 text-dark transition hover:bg-primary hover:text-white flex items-center group"
              >
                <IconTag />
                <p class="px-1">{humanize(tag || "")}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
